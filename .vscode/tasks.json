{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake: configure",
            "type": "shell",
            "command": "C:/cmake-4.0.3-windows-x86_64/bin/cmake.exe",
            "args": [
                "-S", ".",
                "-B", "build",
                "-G", "Visual Studio 17 2022",
                "-A", "x64"
            ],
            "group": "build",
            "detail": "Configure CMake project with x64 architecture"
        },
        {
            "label": "cmake: build",
            "type": "shell",
            "command": "C:/cmake-4.0.3-windows-x86_64/bin/cmake.exe",
            "args": [
                "--build", "build",
                "--config", "Debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "cmake: configure",
            "detail": "Build the CMake project"
        },
        {
            "label": "run tests",
            "type": "shell",
            "command": "./build/Debug/ColorCoderTests.exe",
            "group": "test",
            "dependsOn": "cmake: build",
            "detail": "Run unit tests"
        },
        {
            "label": "run application",
            "type": "shell",
            "command": "./build/Debug/TelCoColorCoder.exe",
            "group": "build",
            "dependsOn": "cmake: build",
            "detail": "Run the main application"
        }
    ]
}
